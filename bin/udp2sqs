#!/usr/bin/env ruby

lib = File.expand_path('../../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

require "udp2sqs_server"

config = YAML.load_file("config.yml")
Udp2sqsServer::Server.config.access_key = config["access_key"]
Udp2sqsServer::Server.config.secret_key = config["secret_key"]
Udp2sqsServer::Server.config.queue_region = config["queue_region"]
Udp2sqsServer::Server.config.topic = config["topic"]

Udp2sqsServer::Server.run(host: ARGV[0], port: ARGV[1])
